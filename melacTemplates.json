    "description": "Open-source business apps",
    "categories": ["project-management"],
    "platform": "linux",
    "logo": "https://cloudinovasi.id/assets/img/logos/odoo.png",
    "image": "odoo:latest",
    "env": [
      {
        "name": "HOST",
        "label": "PostgreSQL database host",
